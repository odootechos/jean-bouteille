<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_export_edi_file">
        <field name="name">export.edi.file.form</field>
        <field name="model">export.edi.file</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export edi">
                <sheet>
                    <field name="not_found" readonly="True" nolabel="1" style="color:red; !important"/>
                    <group>
                        <field name="check_not_found" invisible="1"/>
                        <field name="export_type"
                               readonly="True"
                               attrs="{'invisible':[('check_not_found', '=', True)]}"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="export_file"
                                   filename="filename"
                                   widget="binary"
                                   readonly="1"
                                   attrs="{'invisible':[('check_not_found', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="edi_date"
                                  readonly="1"
                                  attrs="{'invisible':[('check_not_found', '=', True)]}"/>
                        </group>
                    </group>
                    <field name="active_picking" invisible="1"/>
                    <field name="active_model" invisible="1"/>
                    <field name="pickings" invisible="1"/>
                </sheet>
                <footer>
                    <button name="send_via_ftp"
                            string=" Send Via FTP"
                            type="object"
                            attrs="{'invisible':[('check_not_found', '=', True)]}"
                            class="oe_highlight fa fa-send-o"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_export_edi_file_action_view">
        <field name="name">export.edi.file.form</field>
        <field name="model">export.edi.file</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export edi">
                <group>
                    <field name="export_type"/>
                    <field name="reexport"/>
                    <field name="manage_batchs" attrs="{'invisible':[('export_type', '!=', 'stock_snapshot')]} "/>
                </group>
                <field name="active_picking" invisible="1"/>
                <field name="active_model" invisible="1"/>
                <footer>
                    <button name="return_file" string="Export EDI" type="object" class="oe_highlight" />
            or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>

        </field>
    </record>
    <record model="ir.ui.view" id="view_get_edi_file_action_view">
        <field name="name">get.edi.file.form</field>
        <field name="model">export.edi.file</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Import edi">
                <group>
                    <field name="import_file"/>
                    <field name="import_type"/>
                </group>
                <field name="active_picking" invisible="1"/>
                <field name="active_model" invisible="1"/>
                <footer>
                    <button name="get_file" string="Import EDI File" type="object" class="oe_highlight" attrs="{'invisible':[('import_type', '=', 'stock_snaphots')]}"/>
                    <button name="get_csv_stock_snapshots" string="Import EDI Files" type="object" class="oe_highlight" attrs="{'invisible':[('import_type', '!=', 'stock_snaphots')]} "/>
            or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>

        </field>
    </record>
    <record id="view_tree_export_edi_file" model="ir.ui.view">
        <field name="name">export.edi.file.tree</field>
        <field name="model">export.edi.file</field>
        <field name="arch" type="xml">
            <tree>
                <field name="edi_date" readonly="1"/>
                <field name="export_type"/>
                <field name="filename"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_export_edi_item">
        <field name="name">Export EDI FILE</field>
        <field name="res_model">export.edi.file</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Export EDI History" id="menu_export_edi_history" action="jean-bouteille_profile.act_open_export_edi_item" parent="stock.menu_stock_inventory_control" sequence="100"/>

</odoo>

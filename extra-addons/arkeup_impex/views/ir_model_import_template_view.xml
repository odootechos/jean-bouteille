<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="ir_model_import_template_view_form_inherit" model="ir.ui.view">
      <field name="name">ir.model.import.template.view.form.inherit</field>
      <field name="model">ir.model.import.template</field>
      <field name="inherit_id" ref="smile_impex.view_import_template_form"/>
      <field name="arch" type="xml">
        <group name="method" position="after">
          <group name="file_grp">
            <group name="import_file_option_grp">
              <field name="is_remote_import"/>
              <field name="server_ftp_id"
                     attrs="{'invisible': [('is_remote_import', '=', False)], 'required':[('is_remote_import','=',True)]}"/>
              <field name="file_name" invisible="1"/>
              <field name="import_file" filename="file_name"
                     widget='file_filter'
                     options="{'accept': '.csv'}"
                     attrs="{'invisible': [('is_remote_import', '=', True)], 'required': [('is_remote_import', '=', False)]}"/>
              <field name="export_xls"/>
            </group>
          </group>
        </group>
        <xpath expr="//page[last()]" position="after">
          <page name="history_file_pg" string="History Error Files" attrs="{'invisible': [('export_xls', '=', False)]}">
            <button name="button_clean_history" type="object" class="oe_highlight" string="Clean History"/>
            <group>
              <field name="attachment_ids" nolabel="1" widget="one2many">
                <tree>
                  <field name="name" invisible="1"/>
                  <field name="datas" widget="FieldBinary" filename="name"/>
                  <field name="mimetype"/>
                  <field name="type"/>
                  <field name="create_date"/>
                </tree>
              </field>
            </group>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
<odoo>
    <data>
        <record id="jb_stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">JB stock picking view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='reserved_availability']" position="after">
                    <field name="unit_measure" invisible="1"/>
                    <field name="uom_value" string="Unit of Measure" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

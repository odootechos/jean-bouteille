<odoo>
    <record id="mrp_production_form_view_jeanbouteille" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="replace">
                <field name="bom_id"
                       domain="['&amp;', '|',
                                            ('product_id','=',product_id),
                                            '&amp;',
                                                ('product_tmpl_id.product_variant_ids','=',product_id),
                                                ('product_id','=',False),
                                                ('type', '=', 'normal')]"
                       context="{'default_product_tmpl_id': product_tmpl_id}" required="1"
                       attrs="{'readonly': ['|', ('state', '=', 'progress'), '|', ('state', '=', 'done'), ('state', '=', 'cancel')]}"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.actions.server" id="action_cancel_reservation_production">
        <field name="name">Cancel production reservations</field>
        <field name="model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                for record in records:
                    if record.state == "confirmed":
                        if record.availability != "waiting":
                            try:
                                record.do_unreserve()
                            except:
                                continue
        </field>
    </record>
</odoo>


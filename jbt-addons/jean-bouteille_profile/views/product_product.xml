<odoo>
    <data>
        <record id="jean_bouteille_view_stock_product_template_form" model="ir.ui.view">
            <field name="name">JB sale subscription stage </field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']//field[@name='uom_po_id']" position="after">
                    <field name="so_unit"/>
                    <field name="product_purchase_unit"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>